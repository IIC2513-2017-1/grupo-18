%p#notice= notice
%h1 Users
%table
  %thead
    %tr
      %th Username
      %th Email
      / %th Confirmation token
      / %th Confirmed at
      %th Type
      %th Balance
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        / %td= user.confirmation_token
        / %td= user.confirmed_at
        %td= user.user_type
        %td= user.balance
        -
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New User', new_user_path
