  <body>
    <% content_for :content do %>
      <div class="UI_column">
        <h1> Your bets </h1>
        <br>
        <ul>
          <% for bet in current_user.bets %>
            <li><%= link_to bet.name, bet_path(bet) %> </li>
          <% end %>
        </ul>
      </div>

      <% public_bets = Bet.all - current_user.bets %>

      <div class="UI_column">
        <h1><%= "Friends' bets" %></h1>
        <br>
        <ul>
          <% for friend in current_user.friends %>
            <li>
              <h2><%= friend.friend.name + "'s"%></h2>
              <ul>
                <% for bet in friend.friend.bets %>
                  <li><%= link_to bet.name, bet_path(bet) %> </li>
                <% end %>
                <% public_bets = public_bets - friend.friend.bets %>
              </ul>
              <br>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="UI_column">
        <h1> Other (public) bets </h1>
        <br>
        <ul>
          <% for bet in public_bets  %>
            <li><%= link_to bet.name, bet_path(bet) %> </li>
          <% end %>
        </ul>
      </div>

      <div class="UI_column">
        <h1> Bets where you were tagged </h1>
        <br>
        <ul>
          <% for bet in public_bets  %>
            <li>FALTA TAGS EN BETS. QUIZ√ÅS NO LO HACEMOS?</li>
          <% end %>
        </ul>
      </div>

    <% end %>
  </body>
</html>