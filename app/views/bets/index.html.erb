  <body>
    <% content_for :content do %>
      <div class="UI_column">
        <h1> Your bets </h1>
        <br>
        <ul>
          <% for bet in current_user.bets %>
            <li><%= link_to bet.name, bet_path(bet) %> </li>
          <% end %>
        </ul>
      </div>

      <div class="UI_column">
        <h1><%= "Friends' bets" %></h1>
        <i>And of people who've added you as friend</i>
        <br>
        <br>
        <ul>
          <% for friend in who_added_me(current_user) %>
            <li>
              <h2><%= friend.name + "'s"%></h2>
              <ul>
                <% for bet in friend.bets %>
                  <li><%= link_to bet.name, bet_path(bet) %> </li>
                <% end %>
              </ul>
              <br>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="UI_column">
        <h1> Other (public) bets </h1>
        <br>
        <ul>
          <% for bet in @bets_public  %>
            <li><%= link_to bet.name, bet_path(bet) %> </li>
          <% end %>
        </ul>
      </div>

