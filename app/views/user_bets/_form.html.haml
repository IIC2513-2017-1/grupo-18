= form_for(user_bet) do |f|
  - if user_bet.errors.any?
    #error_explanation
      %h2
        = pluralize(user_bet.errors.count, "error")
        prohibited this user_bet from being saved:
      %ul
        - user_bet.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :bet_id
    = f.text_field :bet_id
  .actions
    = f.submit
