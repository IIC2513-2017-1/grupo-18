          <li><%= link_to "All", payments_path, class: cp("/payments") %></li>
          <li><%= link_to "New", new_payment_path, class: cp("/payments/new") %></li>
        </ul>     
      </li>
    <% end %>
    <li class="dropdown">
      <%= link_to "Bets", bets_path, class: cc("bets") %>
      <ul class="dropdown-content">
        <li><%= link_to "All", bets_path, class: cp("/bets") %></li>
        <li><%= link_to "New", new_bet_path, class: cp("/bets/new") %></li>
      </ul>    
    </li>
    <li><%= link_to "Log out", logout_path, method: :delete %></li>
  <% else %>
    <li><%= link_to "Log in", login_path, class: cp("/login")  %></li>
    <li><%= link_to "Sign up", new_user_path, class: cp("/users/new") %></li>
  <% end %>

  <li style="margin-left: auto; margin-right: 0.5%;">
      <ul class="header_like">
