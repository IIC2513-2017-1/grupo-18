  <body>
    <% content_for :content do %>
      <div class="UI_column">
        <h1><%= t('title.payments_by_user') %></h1>

        <% allUsers.each do |user| %>
          <div>
            <h2><%= t('title.to_USER', user: user.name || user.username) %></h2>
            <ul>
              <% user.payments.each do |payment| %>
              <li class="UI_form_column">
                <p> <strong><%= t('label.amount')%>:</strong><%= " #{payment.amount}" %> </p>
                <p><strong><%= t('label.date')%>:</strong> <%= " #{payment.created_at}"%></p>
              </li>
              <% end %>
            </ul>
            <br>
          </div>
        <% end %>
      </div>
    <% end %>
  </body>
